{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useConst": "error",
        "noVar": "error"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "include": [
      "packages/**/tests/**/*.js",
      "packages/**/tests/**/*.ts",
      "packages/**/src/**/*.js",
      "packages/**/src/**/*.ts",
      "demo/**/*.js",
      "demo/**/*.ts"
    ],
    "ignore": [
      "**/pkg/**",
      "**/pkg-node/**",
      "**/pkg-bundler/**",
      "**/node_modules/**",
      "**/dist/**",
      "target/**",
      "../.venv/**",
      "../python/.venv/**"
    ]
  }
}
