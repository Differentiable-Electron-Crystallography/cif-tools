{
  "name": "cif-tools-js",
  "private": true,
  "description": "CIF tools JavaScript workspace - parser and validator WASM packages",
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "build:parser": "wasm-pack build ../crates/cif-parser --target web --out-dir ../../javascript/packages/cif-parser/pkg",
    "build:parser:node": "wasm-pack build ../crates/cif-parser --target nodejs --out-dir ../../javascript/packages/cif-parser/pkg-node",
    "build:parser:bundler": "wasm-pack build ../crates/cif-parser --target bundler --out-dir ../../javascript/packages/cif-parser/pkg-bundler",
    "build:validator": "wasm-pack build ../crates/cif-validator --target web --out-dir ../../javascript/packages/cif-validator/pkg --features wasm",
    "build:validator:node": "wasm-pack build ../crates/cif-validator --target nodejs --out-dir ../../javascript/packages/cif-validator/pkg-node --features wasm",
    "build:validator:bundler": "wasm-pack build ../crates/cif-validator --target bundler --out-dir ../../javascript/packages/cif-validator/pkg-bundler --features wasm",
    "build:all": "npm run build:parser && npm run build:parser:node && npm run build:validator && npm run build:validator:node",
    "test": "npm test --workspaces --if-present",
    "lint": "biome ci .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "dev": "npm run dev --workspace=demo"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
