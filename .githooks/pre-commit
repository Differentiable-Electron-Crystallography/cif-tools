#!/bin/sh
# Pre-commit hook for cif-parser project
# Uses 'just' command runner for all checks
#
# Requires: just (install with: cargo install just)

set -e

# Check if just is installed
if ! command -v just >/dev/null 2>&1; then
    echo "❌ Error: 'just' command runner is not installed"
    echo "   Install it with: cargo install just"
    echo "   Or see: https://github.com/casey/just"
    exit 1
fi

echo "Running pre-commit checks via just..."
echo ""

# Run all CI checks defined in justfile
just ci

echo ""
echo "✅ All checks passed! Your code is ready to commit."
